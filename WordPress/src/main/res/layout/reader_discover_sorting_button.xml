<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/discover_sorting_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:importantForAccessibility="no"
        android:paddingEnd="@dimen/margin_small_medium"
        android:paddingStart="@dimen/margin_extra_large"
        android:contentDescription="@string/reader_discover_sorting_content_description"
        tools:src="@drawable/ic_trending_up_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/wpColorOnSurfaceMedium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/discover_sorting_btn"
        style="@style/SiteTagSelectedFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/discover_sorting_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/reader_discover_sorting_type_popular" />


    <ImageView
        android:id="@+id/discover_sorting_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/discover_sorting_btn"
        android:importantForAccessibility="no"
        android:paddingEnd="@dimen/margin_extra_large"
        android:paddingStart="@dimen/margin_small_medium"
        android:src="@drawable/ic_reader_sorting_down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/wpColorOnSurfaceMedium" />

</androidx.constraintlayout.widget.ConstraintLayout>
